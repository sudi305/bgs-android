<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:paddingRight="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tag_view">

        <ImageView
            android:id="@+id/iv_ch_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_error_red_24dp"
            android:visibility="visible"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_ch_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textSize="16sp"
            android:text="asdasd"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/rl_ch_avatar"
            android:layout_toStartOf="@+id/rl_ch_avatar"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp" />

        <RelativeLayout
            android:id="@+id/rl_ch_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false">

            <ImageView
                android:id="@+id/iv_ch_person"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_done_24dp"
                android:alpha="0.3"
                android:gravity="center"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ri_ch_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:riv_mutate_background="true"
                app:riv_oval="true"/>

            <ImageView
                android:id="@+id/iv_ch_close"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_close_24dp"
                android:alpha="0"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>